pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                dir("~/Item-Manager-Project-BackEnd"){
                    sh 'mvn install -DskipTests'
                }
            }
        }
        stage('Junit Tests') {
            steps {
                dir("~/Item-Manager-Project-BackEnd") {
                    sh 'mvn test -Dtest=MokitoTestSuite'
                }
            }
        }
        stage('Deploy') {
            steps {
                sh 'sudo docker-compose build'
                sh 'sudo docker-compose up -d'
            }
        }
        stage('Selenium Tests') {
            steps {
                dir("~/Item-Manager-Project-BackEnd") {
                    sh 'mvn test -Dtest=SeleniumTestSuite'
                }
            }
        }
    }
}