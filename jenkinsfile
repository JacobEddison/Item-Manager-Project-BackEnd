pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                dir("./"){
                    sh 'mvn install -DskipTests'
                }
            }
        }
        stage('Junit Tests') {
            steps {
                dir("./") {
                    sh 'mvn test -Dtest=MokitoTestSuite'
                }
            }
        }
        stage('Deploy') {
            steps {
                dir("./") {
                    sh 'sudo docker-compose down'
                    sh 'sudo docker-compose build'
                    sh 'sudo docker-compose up -d'
                }
            }
        }
    }
}